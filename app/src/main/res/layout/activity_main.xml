<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputNumbers"
        android:layout_width="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:lines="1"
        android:maxLines="1"
        android:maxLength="16"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/one"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="1"/>

        <TextView
            android:id="@+id/two"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="2"/>

        <TextView
            android:id="@+id/three"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="3"/>

        <TextView
            android:id="@+id/four"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/five"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="5"/>

        <TextView
            android:id="@+id/six"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="6"/>

        <TextView
            android:id="@+id/seven"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="7"/>

        <TextView
            android:id="@+id/eight"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/nine"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="9"/>

        <TextView
            android:id="@+id/zero"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="0"/>

        <TextView
            android:id="@+id/plus"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="+"/>

        <TextView
            android:id="@+id/result"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="="/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/subtract"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="-"/>

        <TextView
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="*"/>

        <TextView
            android:id="@+id/divide"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text=":"/>

        <TextView
            android:id="@+id/delete"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Delete"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="48dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/cleanse"
            android:layout_margin="2dp"
            android:gravity="center"
            android:background="#B5B4AD"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Cleanse"/>
    </LinearLayout>

</LinearLayout>